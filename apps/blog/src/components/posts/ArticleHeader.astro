---
import { ItemDate, ItemTags } from './List';
import type { CollectionEntry } from 'astro:content';

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post }: Props = Astro.props;
---

<section class="mb-10">
  <ItemDate post={post.data} />
  <h1
    class="font-bold text-4xl my-4"
    transition:name={`${post.data.slug}-title`}
  >
    {post.data.title}
  </h1>
  {
    post.data.description && (
      <p itemprop="description" class="text-zinc-400 pb-4">
        {post.data.description}
      </p>
    )
  }
  <hr class="text-zinc-800/5" />
  <div class="flex gap-2 justify-end py-2">
    <ItemTags post={post.data} />
  </div>
</section>
