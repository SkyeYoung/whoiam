---
// 使用示例：如何在页面中使用这些组件
// 假设你有一个 posts 数组
import type { BlogSchema } from '@/content.config';
import List from './List.astro';
import ListItem from './ListItem.astro';

interface Props {
  posts: BlogSchema[];
}

const { posts } = Astro.props;
---

<!-- 使用方式 1: 基本使用 -->
<List>
  {posts.map((post) => <ListItem post={post} />)}
</List>

<!-- 使用方式 2: 如果你只需要单个组件 -->
<!-- 
  你也可以单独导入和使用各个组件：
  
  import ItemDate from './ItemDate.astro';
  import ItemTags from './ItemTags.astro';
  import ItemFooter from './ItemFooter.astro';
  
  然后在模板中使用：
  <ItemDate post={post} />
  <ItemTags post={post} />
  <ItemFooter post={post} />
-->

<!-- 使用方式 3: 在页面文件中 -->
<!--
  在你的页面文件中（比如 src/pages/blog.astro）:
  
  ---
  import { getCollection } from 'astro:content';
  import List from '../components/posts/List.astro';
  import ListItem from '../components/posts/ListItem.astro';
  
  const posts = await getCollection('blog');
  ---
  
  <html>
    <head>
      <title>博客列表</title>
    </head>
    <body>
      <main>
        <h1>我的博客</h1>
        <List>
          {posts.map((post) => (
            <ListItem post={post.data} />
          ))}
        </List>
      </main>
    </body>
  </html>
-->

