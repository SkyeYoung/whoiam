---
import type { BlogSchema } from '@/content.config';

interface Props {
  post: BlogSchema;
}

const { post } = Astro.props;
---

<div
  class="tags flex gap-2 text-sm"
  style={`view-transition-name: ${post.slug}-tags`}
>
  {
    post.tags.map((tag) => (
      <a
        href={`/tags/${tag}`}
        class="px-3 py-1.5 text-xs text-zinc-600 dark:text-zinc-300 bg-zinc-100 dark:bg-zinc-700 rounded-md hover:bg-zinc-200 dark:hover:bg-zinc-600 transition-colors duration-200 no-underline break-words hyphens-auto flex-shrink-0"
      >
        {tag}
      </a>
    ))
  }
</div>
