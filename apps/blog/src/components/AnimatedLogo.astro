---
export interface Props {
  width?: number;
  height?: number;
  className?: string;
}

const { width = 200, height = 40, className = '' } = Astro.props;
---

<div class={`inline-block ${className}`}>
  <svg
    width={width}
    height={height}
    viewBox="0 0 340 60"
    xmlns="http://www.w3.org/2000/svg"
    class="animated-logo"
  >
    <style>
      @media (prefers-reduced-motion) {
        .animated-logo path {
          animation: none !important;
          stroke-dasharray: unset !important;
          opacity: 1 !important;
        }
      }

      @keyframes stroke {
        0% {
          stroke-dashoffset: 1px;
          stroke-dasharray: 0 200px;
          opacity: 0;
        }
        8% {
          opacity: 1;
        }
        50% {
          stroke-dasharray: 200px 0;
          opacity: 1;
        }
        60% {
          stroke-dasharray: 200px 0;
          opacity: 1;
        }
        100% {
          stroke-dasharray: 200px 0;
          opacity: 1;
        }
      }

      .stroke-path {
        stroke-dashoffset: 1px;
        stroke-dasharray: 0 200px;
        animation: stroke 2s ease-in-out forwards;
        transform-origin: center;
        stroke: currentColor;
        stroke-width: 2.8;
        fill: none;
        stroke-linecap: round;
        stroke-linejoin: round;
        opacity: 0;
      }

      /* Y: 左斜线 → 右斜线 → 竖线 */
      .Y-stroke1 {
        animation-delay: 0s;
      }
      .Y-stroke2 {
        animation-delay: 0.3s;
      }
      .Y-stroke3 {
        animation-delay: 0.6s;
      }

      /* o: 从上方开始顺时针画圆 */
      .o1-stroke1 {
        animation-delay: 0.9s;
      }

      /* u: 左竖线 → 底部弧线 → 右竖线 */
      .u-stroke1 {
        animation-delay: 1.2s;
      }
      .u-stroke2 {
        animation-delay: 1.5s;
      }
      .u-stroke3 {
        animation-delay: 1.8s;
      }

      /* n: 左竖线 → 上弧线 → 右竖线 */
      .n-stroke1 {
        animation-delay: 2.1s;
      }
      .n-stroke2 {
        animation-delay: 2.4s;
      }
      .n-stroke3 {
        animation-delay: 2.7s;
      }

      /* g: 圆形 → 竖线下降 */
      .g1-stroke1 {
        animation-delay: 3s;
      }
      .g1-stroke2 {
        animation-delay: 3.3s;
      }

      /* 撇号: 一笔 */
      .apostrophe-stroke1 {
        animation-delay: 3.6s;
      }

      /* s: 上弧 → 下弧 */
      .s-stroke1 {
        animation-delay: 3.9s;
      }
      .s-stroke2 {
        animation-delay: 4.2s;
      }

      /* B: 竖线 → 上半部 → 下半部 */
      .B-stroke1 {
        animation-delay: 4.5s;
      }
      .B-stroke2 {
        animation-delay: 4.8s;
      }
      .B-stroke3 {
        animation-delay: 5.1s;
      }

      /* l: 一竖线 */
      .l-stroke1 {
        animation-delay: 5.4s;
      }

      /* o: 圆形 */
      .o2-stroke1 {
        animation-delay: 5.7s;
      }

      /* g: 圆形 → 竖线下降 */
      .g2-stroke1 {
        animation-delay: 6s;
      }
      .g2-stroke2 {
        animation-delay: 6.3s;
      }

      .animated-logo:hover .stroke-path {
        animation-duration: 1s;
      }
    </style>

    <!-- Y: 参考图片的Y形状，更加倾斜 -->
    <path class="stroke-path Y-stroke1" d="M 5 8 Q 12 22 16 32"></path>
    <path class="stroke-path Y-stroke2" d="M 28 8 Q 20 22 16 32"></path>
    <path class="stroke-path Y-stroke3" d="M 16 32 Q 15 38 13 45"></path>

    <!-- o: 参考图片的椭圆，倾斜且略扁 -->
    <path
      class="stroke-path o1-stroke1"
      d="M 30 20 Q 37 15 44 20 Q 49 25 44 30 Q 37 35 30 30 Q 25 25 30 20 Z"
    ></path>

    <!-- u: 参考图片的u形状，倾斜连笔 -->
    <path class="stroke-path u-stroke1" d="M 52 18 Q 52 25 53 32"></path>
    <path class="stroke-path u-stroke2" d="M 53 32 Q 58 38 65 32"></path>
    <path class="stroke-path u-stroke3" d="M 65 32 Q 66 25 66 18"></path>

    <!-- n: 参考图片的n形状，流畅弧线 -->
    <path class="stroke-path n-stroke1" d="M 74 35 Q 74 28 74 18"></path>
    <path class="stroke-path n-stroke2" d="M 74 20 Q 80 12 88 20"></path>
    <path class="stroke-path n-stroke3" d="M 88 20 Q 88 28 88 35"></path>

    <!-- g: 参考图片的g形状，圆形+优雅下垂 -->
    <path
      class="stroke-path g1-stroke1"
      d="M 96 20 Q 103 15 110 20 Q 115 25 110 30 Q 103 35 96 30 Q 91 25 96 20 Z"
    ></path>
    <path
      class="stroke-path g1-stroke2"
      d="M 107 27 Q 107 38 107 45 Q 107 50 102 50"></path>

    <!-- 撇号: 参考图片的撇号位置和形状 -->
    <path class="stroke-path apostrophe-stroke1" d="M 123 15 Q 125 12 127 15"
    ></path>

    <!-- s: 参考图片的s形状，流畅S曲线 -->
    <path
      class="stroke-path s-stroke1"
      d="M 137 20 Q 133 15 129 20 Q 133 25 137 25"></path>
    <path
      class="stroke-path s-stroke2"
      d="M 129 30 Q 133 35 137 30 Q 133 25 129 25"></path>

    <!-- B: 参考图片的大写B，更高更优雅 -->
    <path class="stroke-path B-stroke1" d="M 160 5 Q 160 20 160 45"></path>
    <path
      class="stroke-path B-stroke2"
      d="M 160 5 Q 170 5 170 13 Q 170 18 160 22"></path>
    <path
      class="stroke-path B-stroke3"
      d="M 160 22 Q 173 22 173 32 Q 173 45 160 45"></path>

    <!-- l: 参考图片的l，向上延伸的优雅线条 -->
    <path class="stroke-path l-stroke1" d="M 185 3 Q 185 20 185 45"></path>

    <!-- o: 参考图片的第二个o -->
    <path
      class="stroke-path o2-stroke1"
      d="M 195 20 Q 202 15 209 20 Q 214 25 209 30 Q 202 35 195 30 Q 190 25 195 20 Z"
    ></path>

    <!-- g: 参考图片的最后g，优雅收尾 -->
    <path
      class="stroke-path g2-stroke1"
      d="M 222 20 Q 229 15 236 20 Q 241 25 236 30 Q 229 35 222 30 Q 217 25 222 20 Z"
    ></path>
    <path
      class="stroke-path g2-stroke2"
      d="M 233 27 Q 233 38 233 45 Q 233 50 228 50"></path>
  </svg>
</div>
